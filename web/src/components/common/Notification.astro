---
interface Props {
  type: 'success' | 'error';
  message: string;
}

const { type, message } = Astro.props;
---

<div class="fixed bottom-4 right-4 z-50">
  <div class={`p-4 rounded-lg shadow-lg ${
    type === 'success' 
      ? 'bg-green-500 text-white' 
      : 'bg-red-500 text-white'
  }`}>
    {message}
  </div>
</div>

<script>
  // Auto-hide the notification after 2 seconds
  setTimeout(() => {
    const notification = document.querySelector('.fixed.bottom-4.right-4');
    if (notification) {
      notification.remove();
    }
  }, 2000);
</script> 